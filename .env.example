# ResourceSpace Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=mariadb
DB_USER=resourcespace_rw
DB_PASS=changeme_in_dotenv
DB_NAME=resourcespace

# Database root password (local development only)
DB_ROOT_PASS=changeme_in_dotenv

# =============================================================================
# ResourceSpace Core Settings
# =============================================================================
RS_BASE_URL=http://localhost:8080

# CRITICAL: Generate with: openssl rand -hex 32
# WARNING: Never change this after files are uploaded - it will break file access!
RS_SCRAMBLE_KEY=generate_with_openssl_rand_hex_32

# Email configuration
RS_EMAIL_FROM=noreply@example.com
RS_EMAIL_NOTIFY=admin@example.com
